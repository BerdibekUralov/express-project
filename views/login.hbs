<div class="d-flex justify-content-between align-items-center">
  <form style="width: 30%;" action="/login" method="post">
    <p class="fs-2">Login</p>
    <div class="form-floating mb-3">
      <input
        type="email"
        name="email"
        class="form-control"
        id="floatingInput"
        placeholder="name@example.com"
      >
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating mb-3">
      <input
        type="password"
        name="password"
        class="form-control"
        id="floatingPassword"
        placeholder="Password"
      >
      <label for="floatingPassword">Password</label>
    </div>
    <button type="submit" class="btn btn-outline-primary">Log in</button>
  </form>
  <div>
    <img
      style="width: 700px;"
      src="https://www.wallpaperup.com/uploads/wallpapers/2017/10/26/1136633/6d0e071a5cade77f41f7f70e71b945fa.jpg"
      alt="image"
    >
  </div>
</div>